{% extends "proophessor_do/base.twig" %}
{% block content %}
<h1>Invoices</h1>
<div class="row">
    <div class="col-md-12">
        {% if invoices is empty %}
            <div class="alert alert-warning">
                <strong>No invoice yet. </strong>
            </div>
        {% else %}
            <div class="list-group">
                {% for invoice in invoices %}
                    <a href="{{ route('page::invoice', {'invoiceId': invoice.id} ) }}" class="list-group-item"><strong>{{ invoice.customer_name }}</strong>
                    <small class="text-info">
                        &nbsp;&nbsp;Due date: {{ invoice.due_date }}&nbsp;&nbsp;|
                        &nbsp;&nbsp;Total: {{ invoice.total }}&nbsp;&nbsp;
                    </small></a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
